{
  "name": "show-service",
  "version": "1.0.0",
  "description": "Poptato's shows management micro-service",
  "main": "./src/server.js",
  "scripts": {
    "start": "node ./src/server.js",
    "start:preloaded": "npm run preload && npm run start",
    "preload": "node -e \"require('./test/assets/db-init').go()\"",
    "test:unit": "mocha test/unit/**/*.spec.js",
    "test:api": "mocha test/api/**/*.spec.js",
    "test": "npm run test:unit && npm run test:api",
    "gen:docs": "./node_modules/.bin/raml2html spec/shows.api.raml > docs/index.html",
    "prepublish": "npm run test && npm run gen:docs"
  },
  "author": "Idan A. <idan5x@live.com> (idan5x.github.io)",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.4",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "thinky": "^2.3.8",
    "poptato-common-raml": "^0.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/express": "^4.0.37",
    "@types/mocha": "^2.2.41",
    "@types/request": "^2.0.3",
    "@types/request-promise-native": "^1.0.6",
    "@types/sinon": "^2.3.3",
    "@types/supertest": "^2.0.3",
    "chai": "^4.1.2",
    "mocha": "^3.5.0",
    "sinon": "^3.1.0",
    "sinon-chai": "^2.13.0",
    "supertest": "^3.0.0",
    "raml2html": "^6.4.1"
  }
}
